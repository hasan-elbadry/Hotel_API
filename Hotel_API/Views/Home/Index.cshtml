@model List<Hotel_API.Models.Room>

@{
    ViewData["Title"] = "Hotel Rooms Dashboard";
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Rooms Dashboard</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 20px;
            text-align: center;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 90%;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            font-size: 1.2rem;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #333;
            color: white;
        }

        .available {
            background-color: #e8f5e9;
        }

        .booked {
            background-color: #ffebee;
        }

        .status-indicator {
            display: inline-block;
            width: 120px;
            height: 45px;
            text-align: center;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            position: relative;
            line-height: 45px;
            font-weight: bold;
            color: white;
        }

        .available .status-indicator {
            background-color: green;
        }

        .booked .status-indicator {
            background-color: red;
        }

        tr:hover {
            background-color: #f1f1f1;
            transition: background-color 0.3s;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Hotel Rooms Dashboard</h2>
        <table>
            <thead>
                <tr>
                    <th>Room Name</th>
                    <th>Type</th>
                    <th>Price</th>
                    <th>Availability</th>
                </tr>
            </thead>
            <tbody id="roomTableBody">
                @foreach (var room in Model)
                {
                    <tr id="room-@room.Id" class="@(room.UserId == null ? "available" : "booked")">
                        <td>@room.RoomNumber</td>
                        <td>@room.Type</td>
                        <td>@room.Price.ToString("C")</td>
                        <td>
                            <div class="status-indicator" onclick="toggleRoomStatus(@room.Id, this)">
                                @(room.UserId == null ? "Available" : "Booked")
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
        setInterval(() => {
            location.reload();
        }, 500);

function toggleRoomStatus(roomId, element) {
    fetch(`/Home/ToggleStatus?id=${roomId}`, { method: "POST" })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                let newStatus = element.innerText === "Available" ? "Booked" : "Available";
                element.innerText = newStatus;
                element.parentElement.parentElement.classList.toggle("available");
                element.parentElement.parentElement.classList.toggle("booked");
            }
        });
}
    </script>
</body>
